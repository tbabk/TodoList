<%- include("partials/header.ejs") %>
        <div class="navbar">
            <a href="/day"><h3>Day</h3></a>
            <a href="/work"><h3>Work</h3></a>
        </div>
        
        <div class="container">
            <div class="inner-container">
                <div class="head">
                    <h1>Work List</h1>

                    <form action="/send" method="POST">
                        <input name="record" type="text" placeholder="Write here" required/>
                        <input type="submit" value="+"/>
                    </form>
                    <hr/>
                </div>
                <div class="content">
                    <div class="todos">    
                        <% todoList.forEach((todo) => { %>
                            <form action="/delete-work" method="POST">
                                <label class="todo">
                                    <input type="checkbox" name="todo" value="<%= todo._id %>" class="tdo" onChange="this.form.submit()">
                                    <div class="todo-txt"><p><%= todo.name %></p></div>
                                </label>
                            </form>
                            <br/>
                       <% }) %>
                    </div>
                </div>
            </div>
        </div>

<%- include("partials/footer.ejs") %>